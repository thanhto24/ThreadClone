<div class="login_container">
    <h2>Đăng nhập bằng tài khoản Instagram</h2>
    <form id="login_form" onsubmit="handleLogin(event)">
        <input type="text" placeholder="Tên người dùng, số điện thoại hoặc Email" required>
        <input type="password" placeholder="Mật khẩu" required>
        <button type="submit">Đăng nhập</button>
    </form>
    <div id="error">
        <p id="error_message">Tài khoản hoặc mật khẩu không đúng</p>
    </div>
    <a href="" class="forgot_password">
        Bạn quên mật khẩu ư?
    </a>
    <div class="or">
        <div class="line"></div>
        <div class="or_text">Hoặc</div>
        <div class="line"></div>
    </div>
    <button class="sign_up" type="button" onclick="location.href='/Signup'">
        Đăng ký tài khoản mới
    </button>
</div>