<script src="js/Thread/createThreadButton.js"></script>

<div id="overlay" class="overlay hidden"></div>
<div id="plus_box" class="thread-container hidden">
  <div class="header">
    <button
      type="button"
      class="cancel-btn"
      style="font-size: 100%; font-weight: bold"
    >
      Hủy
    </button>
    <span>Thread mới</span>
    <div></div>
  </div>
  <hr class="divider" />

  <div class="plus_body">
    <div class="avatar">
      <img
        src="https://th.bing.com/th/id/OIP.U0D5JdoPkQMi4jhiriSVsgHaHa?w=181&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7"
        alt="User avatar"
      />
    </div>

    <form id="create_thread_form">
      <div class="input-section">
        <div class="username">_vteif</div>
        <textarea
          class="input-box"
          placeholder="Có gì mới?"
          name="content"
        ></textarea>

        <!-- Image preview -->
        <div id="image-preview-container" style="display: none; position: relative; text-align: center">
          <img id="image-preview"/>
          <button type="button" id="delete-image" class="btn btn-danger" style="position: absolute; top: 10px; right: 10px; padding: 3px">
            <i class="fa-solid fa-trash"></i>
          </button>
        </div>
        
        <div class="icon-group">
          <label for="image-upload" class="upload-icon">
            <i class="fa-regular fa-image"></i>
            <input
              type="file"
              id="image-upload"
              style="display: none"
              aria-label="Upload an image file"
              name="image"
            />
          </label>
          <button type="button">GIF</button>
          <button type="button" aria-label="Hashtag">
            <i class="fa-solid fa-hashtag"></i>
          </button>
          <button type="button" aria-label="Location">
            <i class="fa-solid fa-location-dot"></i>
          </button>
        </div>
      </div>
    </form>
  </div>

  <div class="plus_footer">
    <button class="reply-settings" type="button">
      Bất kỳ ai cũng có thể trả lời và trích dẫn
    </button>
    <button class="post-btn" onclick="createThreadButton()" type="button">
      Đăng
    </button>
  </div>
</div>

<script>
  // Handle file selection and media preview
  const mediaInput = document.getElementById("image-upload");
  const previewContainer = document.getElementById("image-preview-container");
  const mediaPreview = document.getElementById("image-preview");
  const deleteButton = document.getElementById("delete-image");

  mediaInput.addEventListener("change", function (event) {
    const file = event.target.files[0];

    if (file) {
      // Check the file size (10 MB = 10 * 1024 * 1024 bytes)
      if (file.size > 10 * 1024 * 1024) {
        alert("File size must be less than 10 MB.");
        mediaInput.value = ""; // Clear the file input
        return;
      }

      const reader = new FileReader();
      reader.onload = function (e) {
        // Detect file type for rendering preview
        const fileType = file.type.split("/")[0];
        if (fileType === "image") {
          // Set the preview source for an image
          mediaPreview.src = e.target.result;
          mediaPreview.style.display = "block";
          mediaPreview.style.width = "100%";
          mediaPreview.style.height = "auto";
        } else if (fileType === "video") {
          // Replace img with a video tag for video preview
          const videoTag = document.createElement("video");
          videoTag.src = e.target.result;
          videoTag.controls = true;
          videoTag.style.width = "100%";
          videoTag.style.height = "auto";
          previewContainer.innerHTML = ""; // Clear existing content
          previewContainer.appendChild(videoTag);
          previewContainer.appendChild(deleteButton); // Re-add the delete button
        } else {
          alert("Unsupported file type. Please upload an image or a video.");
          mediaInput.value = ""; // Clear the file input
          return;
        }
        // Display the preview container
        previewContainer.style.display = "block";
      };

      reader.readAsDataURL(file); // Read the media file as a data URL
    }
  });

  deleteButton.addEventListener("click", function () {
    // Clear the preview and reset the container
    previewContainer.innerHTML = `<img id="image-preview" style="display:none;"/>`;
    previewContainer.style.display = "none";
    mediaInput.value = ""; // Clear the file input
  });

  const textarea = document.querySelector(".input-box");

  textarea.addEventListener("input", () => {
    textarea.style.height = "auto"; // Reset the height to recalculate
    textarea.style.height = `${textarea.scrollHeight}px`; // Set height to match content
  });
</script>


