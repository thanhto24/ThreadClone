<!-- Followers and Following Modal Structure -->
<div class="modal fade" id="followersModal" tabindex="-1" aria-labelledby="followersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered custom-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="followersModalLabel">Người theo dõi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <h6>Người theo dõi:</h6>
                    <ul id="followersList" class="list-group">
                        <!-- Follower items will be appended here -->
                    </ul>
                </div>
                <div class="mb-3">
                    <h6>Đang theo dõi:</h6>
                    <ul id="followingList" class="list-group">
                        <!-- Following items will be appended here -->
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>